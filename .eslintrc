{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/rule-name": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "env": {
      "node": true,
      "es6": true
    }
}
